{
  "ConnectionStrings": {
    "RAGDatabase": "Server=localhost;Database=LocalRAGDB;Trusted_Connection=True;TrustServerCertificate=True;MultipleActiveResultSets=true"
  },
  "RAGSettings": {
    "SharedFolderPath": "C:\\SharedDocuments",
    "EmbeddingModelPath": "C:\\Models\\all-MiniLM-L6-v2.onnx",
    "LLMModelPath": "C:\\Models\\phi-3-mini-4k-instruct.onnx",
    "EmbeddingDimension": 384,
    "ChunkSize": 1000,
    "ChunkOverlap": 200,
    "TopKResults": 5,
    "SimilarityThreshold": 0.7,
    "MaxResponseTokens": 512,
    "SupportedFileTypes": [
      ".pdf",
      ".docx",
      ".doc",
      ".txt",
      ".xlsx",
      ".pptx"
    ]
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "Microsoft.EntityFrameworkCore": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Code, Serilog.Sinks.Console",
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/rag-system-.log",
          "rollingInterval": "Day",
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {Message:lj}{NewLine}{Exception}",
          "retainedFileCountLimit": 30
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithThreadId"
    ]
  },
  "AllowedHosts": "*",
  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://localhost:5105"
      },
      "Https": {
        "Url": "https://localhost:7252"
      }
    }
  }
}